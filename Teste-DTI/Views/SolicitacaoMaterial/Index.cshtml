@model IEnumerable<Teste_DTI.Models.SolicitacaoMaterialModel>

<div class="container d-flex flex-column">
    <div class="d-flex justify-content-between align-items-center my-5">
        <h1>Solicitações</h1>
        <a asp-controller="SolicitacaoMaterial" asp-action="CadastrarUsuario" class="btn btn-dark">Nova Solicitação</a>
    </div>

    <table class="my-5 table table-hover">
        <thead>
            <tr>
                <th scope="col">Nº Ordem</th>
                <th scope="col">Produto</th>
                <th scope="col">Departamento</th>
                <th scope="col">Detalhes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var solicitacao in Model)
            {
                <tr>
                    <td>@solicitacao.IdSolicitacao.ToString("D4")</td>
                    <td>@solicitacao.NomeProduto</td>
                    <td>@solicitacao.Departamento</td>
                    <td>
                        <a asp-controller="SolicitacaoMaterial"
                           asp-action="DetalheMaterial"
                           asp-route-id="@solicitacao.IdSolicitacao"
                           class="btn btn-primary">
                            Detalhe
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
