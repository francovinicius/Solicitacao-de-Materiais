@model IEnumerable<FornecedoresModel>

<div>

<div class="d-flex justify-content-between align-items-center my-5">
    <h1>Tabela Fornecedores</h1>
        <a asp-controller="Fornecedores" asp-action="CadastrarFornecedor" class="btn btn-dark nav-item">Cadastrar</a>
</div>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Endereco</th>
            <th scope="col">Email</th>
            <th scope="col">CNPJ</th>
            <th scope="col">Inscricao Estatual</th>
            <th scope="col">Inscricao Municipal</th>
                <th scope="col"></th>


        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var fornecedores in Model)
            {
                <tr>
                    <td>@fornecedores.NomeFornecedores</td>
                    <td>@fornecedores.EnderecoFornecedores</td>
                    <td>@fornecedores.EmailFornecedores</td>
                    <td>@fornecedores.CNPJFornecedores</td>
                    <td>@fornecedores.InscricaoEstatualFornecedores</td>
                    <td>@fornecedores.InscricaoMunicipalFornecedores</td>
                    <td>
                        <a asp-controller="Fornecedores" asp-action="EditarFornecedor" asp-route-id="@fornecedores.IdFornecedores" class="btn btn-primary">Alterar</a>
                            <a asp-controller="Fornecedores" asp-action="DeletarFornecedor" asp-route-id="@fornecedores.IdFornecedores" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>


</div>