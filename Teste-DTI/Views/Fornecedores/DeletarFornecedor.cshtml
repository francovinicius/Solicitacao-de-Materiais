@model FornecedoresModel

@{
    ViewData["title"] = "Deletar Usuarios";
}

<div class="container p-5">

<div class="mb-5 text-center">
    <h1>Alterar Usuarios</h1>
</div>

<form method="post" asp-controller="Fornecedores" asp-action="DeletarFornecedor">

    <input type="hidden" asp-for="IdFornecedores" />

    <h4 class="text-center my-2 text-danger">Tem certeza que deseja excluir?</h4>

        <div class="mb-3">
            <label for="NomeFornecedores" class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="NomeFornecedores" id="NomeFornecedores">
            <span class="text-danger" asp-validation-for="NomeFornecedores"></span>
        </div>

        <div class="mb-3">
            <label for="EnderecoFornecedores" class="form-label">Endereco</label>
            <input type="text" class="form-control" asp-for="EnderecoFornecedores" id="EnderecoFornecedores">
            <span class="text-danger" asp-validation-for="EnderecoFornecedores"></span>
        </div>

        <div class="mb-3">
            <label for="EmailFornecedores" class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="EmailFornecedores" id="EmailFornecedores">
            <span class="text-danger" asp-validation-for="EmailFornecedores"></span>
        </div>

        <div class="mb-3">
            <label for="CNPJFornecedores" class="form-label">CNPJ</label>
            <input type="text" class="form-control" asp-for="CNPJFornecedores" id="CNPJFornecedores">
            <span class="text-danger" asp-validation-for="CNPJFornecedores"></span>
        </div>

        <div class="mb-3">
            <label for="InscricaoEstatualFornecedores" class="form-label">Inscricao Estadual</label>
            <input type="text" class="form-control" asp-for="InscricaoEstatualFornecedores" id="InscricaoEstatualFornecedores">
            <span class="text-danger" asp-validation-for="InscricaoEstatualFornecedores"></span>
        </div>

        <div class="mb-3">
            <label for="InscricaoMunicipalFornecedores" class="form-label">Inscricao Municipal</label>
            <input type="text" class="form-control" asp-for="InscricaoMunicipalFornecedores" id="InscricaoMunicipalFornecedores">
            <span class="text-danger" asp-validation-for="InscricaoMunicipalFornecedores"></span>
        </div>

    <div class="d-flex justify-content-end">
        <div>
            <button type="submit" class="btn btn-danger">Deletar</button>
                <a class="btn btn-light nav-item" href="/Fornecedores">Voltar</a>
        </div>
    </div>

</form>


</div>